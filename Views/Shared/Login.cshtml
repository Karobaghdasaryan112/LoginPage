@page
@model LoginAndRegistrationPage.Models.UserModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="login-container">
        <h2>Login Page</h2>
        <form action="/Shared/Submit" method="post" enctype="application/x-www-form-urlencoded">
            <div class="input-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="Username" placeholder="Enter your username" required>
                
                    @if(ViewBag.MessageLogin != null)
                    {
                    <div class="Error_Message">
                        <div>*</div>@ViewBag.MessageLogin
                    </div>
                }

            </div>
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="Password" placeholder="Enter your password" required>
                @if(ViewBag.MessagePassword != null)
                    {
                    <div class="Error_Message">
                        <div>*</div>@ViewBag.MessagePassword
                    </div>
                    }
            </div>
            <div class="input-group">
                <button type="submit" class="btn">Login</button>
            </div>
        </form>
    </div>
</body>
</html>