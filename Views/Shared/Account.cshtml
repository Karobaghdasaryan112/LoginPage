@page
@using LoginAndRegistrationPage.Models
@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="~/css/Account.css">
</head>
<body>
    <div class="profile-container">
        <h2>User Profile</h2>

        <div class="profile-card">
            <div class="profile-image">
                <img src="~/images/user-avatar.png" alt="User Avatar" class="avatar">
            </div>

            <div class="profile-info">
                <p><strong>FirstName:</strong> @Model.FirstName</p>
                <p><strong>LastName:</strong> @Model.LastName</p>
                <p><strong>Email:</strong> @Model.Email</p>
            </div>

            <div class="edit-profile">
                <a href="/Account/EditProfile" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
</body>
</html>